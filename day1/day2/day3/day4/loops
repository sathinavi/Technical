
#include <stdio.h>

int main()
{
    int n;

    printf("Enter a value for n: ");
    scanf("%d", &n);
    printf("for loop");
    for (int i = 0; i <= n; i++)
    {
        printf("%d\n", i);
    }
    printf("while loop\n");
    int i = 0;
    while (i <= n)
    {
        printf("%d\n", i);
        i++;
    }
    printf("do while loop\n");
    i = 0;
    do
    {
        printf("%d\n", i);
        i++;
    } while (i <= n);

    return 0;
}
